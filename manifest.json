{
    "manifest_version": 2,
  
    "name": "mastertabs",
    "description": "unclutter your tabs",
    "version": "1.0",
  
    "browser_action": {
      "default_title": "Hello!",
     "default_icon": "icon.png"
    },

    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "permissions": [
     "activeTab",
     "tabs"
     ]
  }